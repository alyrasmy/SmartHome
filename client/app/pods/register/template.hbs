<div class='login'>
      {{#paper-card}}
        {{#paper-card-content}}
          <div style="display:flex;justify-content:center;">
              <img src="assets/Logo2.jpg" alt="Logo" style="width:30%;height:30%;">
          </div>
          <h3>Register</h3>
          <form class="form-horizontal" {{action "register" on="submit"}}>
            {{#if loginFailed}}
              <div class="alert alert-danger">Invalid Inputs</div>
            {{/if}}
            {{#if requestFailed}}
              <div class="alert alert-danger">Request Failed</div>
            {{/if}}

            {{#if isSlowConnection}}
              <div class="alert alert-warning">The request seems to be taking more time than usual, please wait.</div>
            {{/if}}

            {{paper-input label="Name"  width=80 value=name}}
            {{paper-input label="Username" width=50  value=username}}
            {{paper-input label="Password" type="password" width=100 value=password}}
            {{paper-input label="Confirm Password" type="password" value=cPassword}}
            {{paper-input label="E-mail" value=email}}
            {{paper-input label="House Id" value=houseId}}
            {{paper-input label="Enter All Room Ids Separated by comma" value=roomIds}}

            <div style='float:right'>
              <button type="submit" class="btn" {{bindAttr disabled="isProcessing"}}>
                Register
              </button>
                {{#link-to 'dashboard' invokeAction=(action 'cancel')}} Cancel {{/link-to}}
            </div>
            {{#if loading}}
                  <div style='float:right'>
                {{paper-progress-circular class="md-hue-2"}}
                  </div>
             {{/if}}
          </form>
        {{/paper-card-content}}
      {{/paper-card}}
</div>
